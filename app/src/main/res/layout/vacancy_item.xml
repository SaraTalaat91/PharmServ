<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/vacancy_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:textColor="@color/vacancyListTitleColor"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Community Pharmacist(Night Shift)" />

        <TextView
            android:id="@+id/created_at_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="#d0d0d0"
            android:textSize="11sp"
            tools:text="2 days ago" />


        <TextView
            android:id="@+id/company_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacancy_title_text_view"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:text="Sara Alshamy Pharmacy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_name_text_view"
            android:layout_marginTop="6dp"
            android:background="@drawable/layout_curved_corners"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/company_address_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_location"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textColor="#b7b7c6"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="AbdelHamid Soliman, Garden City, Ismailia" />

            <TextView
                android:id="@+id/working_hours_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_clock"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textColor="#b7b7c6"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="10 am - 6 pm (Sat - Thu)" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

