<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_item"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:transitionName="@string/shared_element"
    android:paddingBottom="2dp"
    android:background="@android:color/white"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/category_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:tint="#45020b58"
        tools:src="@drawable/pharmacist_final"
        android:background="@android:color/white"
        />

    <TextView
        android:id="@+id/category_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:textSize="26sp"
        tools:text="Pharmaceutical industry"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:elevation="2dp"
        android:background="#e6e6e6"/>

    <ProgressBar
        android:id="@+id/image_loading_progress_bar"
        android:indeterminateTint="#bdbdbd"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>